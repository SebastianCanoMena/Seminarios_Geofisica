---
import { Image } from 'astro:assets';
import Unam from '../assets/navbar/Unam.png';
import Geofisica from '../assets/navbar/Geofisica.png';
---
<div class="navbar">

<div class="icons">
    <a href="https://www.unam.mx/" target="_blank" rel="noopener noreferrer" id="unam"><Image src={Unam} alt="unam-icon"/></a>
    <a href="https://www.geofisica.unam.mx/" target="_blank" rel="noopener noreferrer" id="geofisica"><Image src={Geofisica} alt="instituto-de-geofisica-icon"/></a>
</div>
<div class="title">
    <h1>Seminarios</h1>
</div>
</div>
<style>
    .navbar{
        display: flex;
        height: 129px;
        background-color: #0A1128;

    }
    .title{   
        width: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 30px;
        color: #FEFCFB;
    }
    @media screen and (max-width: 1200px) {
        .title{
            display: none;
        }
    }
    .icons{
        position: absolute;
        display: flex;
    }
    a{
        margin-top: auto;
        margin-bottom: auto;
    }
</style>